점포 테이블

CREATE TABLE STORE_INFO 
( 
    STORE_CD       VARCHAR2(100)	NOT NULL,
    STORE_NM       VARCHAR2(100),
    SALES_DATE     VARCHAR2(8),
    MANAGER        VARCHAR2(8),
    SALES          NUMBER
);
ALTER TABLE STORE_INFO ADD CONSTRAINT STORE_INFO_PK PRIMARY KEY (STORE_CD, SALES_DATE);

COMMENT ON COLUMN STORE_INFO.STORE_CD IS '점포 코드';
COMMENT ON COLUMN STORE_INFO.STORE_NM IS '점포명';
COMMENT ON COLUMN STORE_INFO.SALES_DATE IS '매출월';
COMMENT ON COLUMN STORE_INFO.MANAGER IS '점장명';
COMMENT ON COLUMN STORE_INFO.SALES IS '매출금액';
